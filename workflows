name: Update README with Champions

on:
  push:
    branches:
      - main  # You can change this to your default branch name

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v2

    - name: Update README
      run: |
        champions=$(cat champs.json | jq -r 'to_entries | map("* \(.key): \(.value)") | join("\n")')
        sed -i -e "/^### World Champion:/,/^## How to Update the Champions:/c### World Champion\n\n$champions\n## How to Update the Champions:" README.md
        git add README.md
        git commit -m "Update README with current champions" || true
        git push
      env:
        GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
